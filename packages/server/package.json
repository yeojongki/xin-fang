{
  "name": "@xf/server",
  "version": "0.0.1",
  "description": "Server side of Xin-Fang",
  "author": "kk597@sina.com",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production && rimraf dist && tsc -p tsconfig.build.json",
    "build:main": "cross-env NODE_ENV=production && rimraf dist && ncc build src/main.ts -m",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:dev": "cross-env NODE_ENV=development node scripts/initDB.js",
    "seed:prod": "cross-env NODE_ENV=production node scripts/initDB.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev:debug": "cross-env NODE_ENV=development ts-node-dev --inspect --respawn -r tsconfig-paths/register ./src/main.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/main.ts",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "cross-env NODE_ENV=production node dist",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:js": "eslint \"src/**/*.{ts,tsx}\"",
    "fix:js": "yarn run lint:js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/typeorm": "^6.1.3",
    "@types/cron": "^1.7.2",
    "@xf/common": "0.0.1",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "cron": "^1.8.2",
    "dotenv": "^8.1.0",
    "form-data": "^3.0.0",
    "fs-extra": "^9.0.1",
    "ioredis": "^4.14.1",
    "module-alias": "^2.2.1",
    "mysql": "^2.17.1",
    "nestjs-redis": "^1.2.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.2",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "6.1.1",
    "@types/express": "4.16.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/request": "^2.48.5",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chalk": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "24.7.1",
    "prettier": "^2.2.1",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "ts-node-dev": "^1.0.0-pre.41",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
